@{
    ViewData["Title"] = "Company Page";
}

@model List<Company>

<div class="container">
    <div class="row pt-4 pd-23">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Company
            </a>
        </div>
    </div>
    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Phone</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var obj in Model.OrderBy(u => u.Id))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.StreetAddress</td>
                <td>@obj.City</td>
                <td>@obj.State</td>
                <td>@obj.Phone</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-asp-controller="Company" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-asp-controller="Company" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>