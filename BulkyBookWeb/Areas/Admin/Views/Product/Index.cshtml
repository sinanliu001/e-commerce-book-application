@{
    ViewData["Title"] = "Product Page";
}

@model List<Product>

@* <h1 class="display-4 text-center">Categories List</h1> *@
<div class="container">
    <div class="row pt-4 pd-23">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create NEW Product
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Author</th>
            <th>ListPrice</th>
            <th>Category</th>
            <th></th>
        </tr>

        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Title</td>
                <td>@obj.ISBN</td>
                <td>@obj.Author</td>
                <td>@obj.ListPrice</td>
                <td></td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-asp-controller="Product" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-asp-controller="Product" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>
